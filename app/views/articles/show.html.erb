<h1 class="text-4xl font-bold"><%= @article.title %></h1>
<p class="text-xl font-semibold"><%= @article.body %></p>
<div class="flex border items-center">
  <button class="p-2 hover:font-medium transition-all text-green-500"><%= link_to "Edit", edit_article_path(@article) %></button>
  <p>|</p>
  <button class="p-2 hover:font-medium transition-all text-red-500"><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></button>
</div>
<h2 class="text-xl font-bold">Comments:</h2>
<%= render @article.comments %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
