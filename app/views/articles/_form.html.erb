<%= form_with model: article do |form| %>
  <div class="p-4 flex flex-col items-center gap-2">
    <div class="">
      <%= form.text_field :title, placeholder: :title, class: 'rounded w-full' %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="bg-red-400 rounded p-2 text-center"><%= message %></div>
      <% end %>
    </div>
    <div class="">
      <%= form.text_area :body, placeholder: :body, class: 'rounded w-full' %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="bg-red-400 rounded p-2 text-center"><%= message %></div>
      <% end %>
    </div>
    <button class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600 active:scale-95 transition-all">
      <%= form.submit %>
    </button>
  </div>
<% end %>
